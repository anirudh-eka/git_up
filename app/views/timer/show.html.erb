<section class="current-time">
	Current Time: <span id="current-time"><%= DateTime.now.strftime("%l:%M:%S %p")%></span></li>
</section>

<div class="content">
<section class="current-event-timer">
	<span id="time-left"></span>
	<sub id="timer-status">until Next Events</sub>
</section>

<section class="next-event-details">
	<ul>
		<% if @sched_event.group_name %>
			<li><strong>Next Event:</strong> <span id="event-name"><%= @sched_event.group_name %></li>
		<% else %>
			<li><strong>Next Event:</strong> <span id="event-name"><%= @sched_event.name %></li>
		<% end %>
		<li><strong>Location:</strong> <span id="event-venue"> <%= @sched_event.venue %></span></li>
		<li><strong>Start Time:</strong> <span id="event-start-time" data-datestring="<%= @sched_event.start_time%>">
				<%= @sched_event.start_time.strftime("%l:%M %p") %>
			</span></li>
	</ul>
</section>
